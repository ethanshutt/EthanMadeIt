<header class="post-list__header">
  <h2 class="post-list__header-title">Recent posts</h2>
  <a class="post-list__header-link" href="/old">View All</a>
</header>
{%- for post in collections.recent -%}
<article class="post-list">
  <h3 class="post-list__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
  <p class="post-list__description">{{ post.data.description }}</p>
  <time class="post-list__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
</article>
{%- endfor -%}

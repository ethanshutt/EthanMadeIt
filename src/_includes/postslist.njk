{%- for post in collections.postFeed -%}
  <article class="margin-bottom">
    <h3 class="no-margin-bottom"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
    <time class="postlist-date no-margin-top" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
  </article>
{%- endfor -%}
<a href="/posts/">View All Posts</a>

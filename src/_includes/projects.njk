<section class="margin-bottom-lg">
<header class="post-list__header">
  <h2 class="post-list-title">Projects</h2>
  <a class="text-preset__link" href="/for/">View All</a>
</header>
{%- for project in fun.projects -%}
<article class="font-sans margin-bottom-lg">
  <h3 class="text-preset-5 margin-bottom"><a href="{{ project.github }}">{{ project.text }}</a></h3>
  <p class="italic margin-top-none margin-bottom-none">{{ project.description }}</p>
  {% for tag in project.tags %}
    <span class="text-color__light-grey">#{{ tag }}</span>
  {% endfor %}
</article>
{%- endfor -%}
</section>

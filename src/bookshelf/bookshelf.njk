---
eleventyExcludeFromCollections: true
layout: base.njk
title: Bookshelf
---
<h1 class="black">2020</h1>
<section class="bookshelf__list">
    {% for book in bookshelf %}
        <article class="book">
            <a href="{{ book.url }}"><img class="responsive-img" src="{{ book.cover }}" alt="{{ book.title }} Cover"></a>
            <div class="book-information">
                <a class="text-preset__link" href="{{ book.url }}">{{ book.title }}</a>
                <p class="text-preset__list-title no-margin-top no-margin-bottom text-color__light-grey">{{ book.subtitle }}</p>
                <p class="text-preset__list-title no-margin-top">{{ book.author }}</p>
            </div>
        </article>
    {% endfor %}
</section>